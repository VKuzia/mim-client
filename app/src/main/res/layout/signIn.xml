<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/userIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        tools:srcCompat="@drawable/user" />

    <EditText
        android:id="@+id/usernameEdit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignTop="@id/userIcon"
        android:layout_alignBottom="@id/userIcon"
        android:layout_toRightOf="@id/userIcon"
        android:layout_toEndOf="@id/userIcon"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Login"
        android:importantForAutofill="no"
        android:inputType="text" />

    <ImageView
        android:id="@+id/lockIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/userIcon"
        android:layout_alignLeft="@id/userIcon"
        android:layout_alignStart="@id/userIcon"
        android:layout_marginTop="20dp"
        tools:srcCompat="@drawable/lock" />

    <EditText
        android:id="@+id/passwordEdit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignTop="@id/lockIcon"
        android:layout_alignBottom="@id/lockIcon"
        android:layout_toRightOf="@id/lockIcon"
        android:layout_toEndOf="@id/lockIcon"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Password"
        android:importantForAutofill="no"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/signInButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/passwordEdit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:focusable="true"
        android:text="Sign in"
        android:textSize="15sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signInButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:focusable="true"
        android:text="Sign up"
        android:textSize="15sp" />

</RelativeLayout>