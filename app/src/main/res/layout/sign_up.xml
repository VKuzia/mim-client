<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/signUpLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="150dp"
        android:text="Sign up"
        android:textSize="40sp"/>

    <ImageView
        android:id="@+id/signUpUsernameIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/signUpLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        tools:srcCompat="@drawable/user" />

    <EditText
        android:id="@+id/signUpUsernameEdit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_toRightOf="@id/signUpUsernameIcon"
        android:layout_toEndOf="@id/signUpUsernameIcon"
        android:layout_alignTop="@id/signUpUsernameIcon"
        android:layout_alignBottom="@id/signUpUsernameIcon"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Username"
        android:importantForAutofill="no"
        android:inputType="text" />

    <ImageView
        android:id="@+id/signUpLoginIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/signUpUsernameIcon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        tools:srcCompat="@drawable/mail" />


    <EditText
        android:id="@+id/signUpLoginEdit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_toRightOf="@id/signUpLoginIcon"
        android:layout_toEndOf="@id/signUpLoginIcon"
        android:layout_alignTop="@id/signUpLoginIcon"
        android:layout_alignBottom="@id/signUpLoginIcon"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Login"
        android:importantForAutofill="no"
        android:inputType="text" />

    <ImageView
        android:id="@+id/signUpPasswordIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/signUpLoginIcon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        tools:srcCompat="@drawable/lock" />

    <EditText
        android:id="@+id/signUpPasswordEdit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_toRightOf="@id/signUpPasswordIcon"
        android:layout_toEndOf="@id/signUpPasswordIcon"
        android:layout_alignTop="@id/signUpPasswordIcon"
        android:layout_alignBottom="@id/signUpPasswordIcon"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Password"
        android:importantForAutofill="no"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/signUpCreateAccount"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/signUpPasswordEdit"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:focusable="true"
        android:text="Create account"
        android:textSize="15sp" />
</RelativeLayout>